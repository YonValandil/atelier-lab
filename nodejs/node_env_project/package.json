{
  "name": "node_env_project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "flow": "flow",
    "build": "npx babel src --out-dir dist",
    "build-css": "node-sass -w src/css/scss -o src/css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "start": "nodemon --watch src/ --exec npx babel src/index.js",
    "start-build": "nodemon --watch src/ --exec \"npm run build\"",
    "start-all": "nodemon -w src/ --exec \"npm run build\" -e scss -x \"npm run build-css\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "flow-bin": "^0.91.0",
    "node-sass": "^4.11.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5"
  }
}
